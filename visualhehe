import tkinter as tk

def mostrar_mensagem():
    label["text"] = "Olá, mundo!"

# Criação da janela
janela = tk.Tk()
janela.title("Script Visual")
janela.geometry("300x150")

# Criação do botão
botao = tk.Button(janela, text="Clique aqui!", command=mostrar_mensagem)
botao.pack(pady=20)

# Criação do rótulo para exibir a mensagem
label = tk.Label(janela, text="", font=("Helvetica", 14))
label.pack()

# Loop principal da aplicação
janela.mainloop()
